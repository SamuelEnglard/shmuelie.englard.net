{
	"include": [ "src/**/*.ts", "src/**/*.tsx" ],
	"compilerOptions": {
		"strict": true,
		"alwaysStrict": true,
		"target": "ES2020",
		"module": "ES2020",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"allowUnusedLabels": false,
		"strictNullChecks": true,
		"strictBindCallApply": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"baseUrl": "./node_modules/",
		"paths": {
			"https://unpkg.com/office-ui-fabric-react@7/dist/office-ui-fabric-react.js": [
				"@fluentui/react"
			]
		},
		"moduleResolution": "Node",
		"jsx": "react-jsx"
	}
}